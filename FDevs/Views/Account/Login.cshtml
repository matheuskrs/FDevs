@model FDevs.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    ViewData["SubTitle"] = "Entrar";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<section class="left d-flex align-items-center justify-content-center">
    <div class="loginBox ">
        <form class="form-signin" method="post">
            <div asp-validation-summary="ModelOnly" hidden></div>
            <input type="hidden" asp-for="UrlRetorno">
            <div class="text-center my-2">
                <img class="mb-2" src="~/img/Logo/mini_fdevs.png" alt="Logo">
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger text-sm"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Senha" class="form-control">
                <label asp-for="Senha"></label>
                <span asp-validation-for="Senha" class="text-danger text-sm"></span>
            </div>
            <div class="mb-3 form-check text-dark">
                <input type="checkbox" class="form-check-input" asp-for="Lembrar">
                <label class="form-check-label" asp-for="Lembrar"></label>
            </div>
            <button class="btn btn-lg w-100 btn-danger" type="submit">Entrar</button>
        </form>
        <p class="mt-3 mb-3 text-dark text-center">
            Ainda n√£o possui uma conta?
            <a asp-action="Registro" class="text-dark fw-bold text-decoration-none">
                Registre-se aqui
            </a>
        </p>
    </div>
</section>
<section class="right w-100">
    <img src="~/img/Login/background.png" class="w-100" alt="">
</section>

@section Scripts {
    <script type="text/javascript">
        let mensagemErro = '';
        $(".validation-summary-errors ul li").each(function () {
            mensagemErro += $(this).text() + '<br/>';
        });
        if (mensagemErro != '')
            swal.fire(
                'Acesso Negado',
                mensagemErro,
                'error'
            );
    </script>
}

@section Styles {
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }


        html,
        body,
        .left {
            background-color: gainsboro;
            height:100%;
            overflow:hidden;
        }

        .loginContainer {
            display: grid;
            grid-template-columns: 30% 1fr;
        }

        .loginBox {
            background-color: white;
            padding: 0 2rem;
            margin: 2rem;
            border-radius: 3px;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 10px;
        }

        .right {
            background-image: url();
        }
    </style>
}