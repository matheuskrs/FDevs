@model FDevs.Models.Estado
@{
    ViewData["Title"] = "Estado de conclusão";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-success shadow-secondary border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3">@ViewData["Title"]</h5>
                    <h6 class="text-white text-capitalize ps-3">Excluir</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <div class="row">
                    <div class="col-9 mb-3">
                        <div class="input-group input-group-outline mb-1">
                            <label asp-for="Nome" for="floatingInput" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" rows="5" readonly>
                        </div>
                        <span asp-validation-for="Nome" class="text-danger text-sm"></span>
                    </div>
                    <div class="col-3 align-items-center d-flex mb-3">
                        <input type="color" asp-for="Cor" disabled/>
                    </div>
                </div>
                <form asp-action="Delete" class="mt-3">
                    <h5 class="text-danger mb-2">Confirma a exclusão deste Estado?</h5>
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Excluir" class="btn btn-danger me-3" />
                    <a asp-action="Index" class="btn btn-info">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>