@model FDevs.Models.UsuarioCurso
@{
    ViewData["Title"] = "Cursos dos usuários";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-success shadow-secondary border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3">@ViewData["Title"]</h5>
                    <h6 class="text-white text-capitalize ps-3">Excluir</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <div class="row">
                    <div class="col-6 mb-3">
                        <div class="input-group input-group-outline">
                            <label asp-for="UsuarioId" class="form-label"></label>
                            <select asp-for="UsuarioId" class="form-control" disabled asp-items="ViewBag.UsuarioId">
                            </select>
                        </div>
                        <span asp-validation-for="UsuarioId" class="text-danger text-sm"></span>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="input-group input-group-outline">
                            <label asp-for="CursoId" class="form-label"></label>
                            <select asp-for="CursoId" class="form-control" disabled asp-items="ViewBag.CursoId">
                            </select>
                        </div>
                        <span asp-validation-for="CursoId" class="text-danger text-sm"></span>
                    </div>
                </div>
                <form asp-action="Delete" class="mt-3">
                    <h5 class="text-danger mb-2">Confirma a exclusão deste relacionamento entre o usuário e o curso?</h5>
                    <input type="hidden" asp-for="UsuarioId" />
                    <input type="hidden" asp-for="CursoId" />
                    <input type="submit" value="Excluir" class="btn btn-danger me-3" />
                    <a asp-action="Index" class="btn btn-info">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>